<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import org.fxmisc.richtext.CodeArea?>


<?import org.fxmisc.richtext.CodeArea?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="480.0" minWidth="640.0"
            prefHeight="480.0" prefWidth="640.0"
            xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="texteditor.main.EditorController">
   <children>
      <AnchorPane layoutY="7.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <MenuBar layoutX="14.0" layoutY="14.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem id="newFileMenuItem" fx:id="newFileMenuItem" mnemonicParsing="false" onAction="#newFileOnAction" text="New File" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="openFIleMenuItem" fx:id="openFIleMenuItem" mnemonicParsing="false" onAction="#openFIleOnAction" text="Open File" />
                  <MenuItem id="openRecentMenuItem" fx:id="openRecentMenuItem" mnemonicParsing="false" onAction="#openRecentOnAction" text="Open Recent..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="saveFIleMenuItem" fx:id="saveFileMenuItem" mnemonicParsing="false" onAction="#saveFileOnAction" text="Save FIle" />
                  <MenuItem id="saveFileAsMenuItem" fx:id="saveFileAsMenuItem" mnemonicParsing="false" onAction="#saveFileAsOnAction" text="Save File As" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="closeFileMenuItem" fx:id="closeFileMenuItem" mnemonicParsing="false" onAction="#closeFileOnAction" text="Close FIle" />
                  <MenuItem id="exitProgramMenuItem" fx:id="exitProgramMenuItem" mnemonicParsing="false" onAction="#exitProgramOnAction" text="Exit Program" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem id="undoMenuItem" fx:id="undoMenuItem" mnemonicParsing="false" onAction="#undoOnAction" text="Undo" />
                  <MenuItem id="redoMenuItem" fx:id="redoMenuItem" mnemonicParsing="false" onAction="#redoOnAction" text="Redo" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="cutMenuItem" fx:id="cutMenuItem" mnemonicParsing="false" onAction="#cutOnAction" text="Cut" />
                  <MenuItem id="copyMenuItem" fx:id="copyMenuItem" mnemonicParsing="false" onAction="#copyOnAction" text="Copy" />
                  <MenuItem id="pasteMenuItem" fx:id="pasteMenuItem" mnemonicParsing="false" onAction="#pasteOnAction" text="Paste" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="findReplaceMenuItem" fx:id="findReplaceMenuItem" mnemonicParsing="false" onAction="#findReplaceOnAction" text="Find &amp; Replace" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Preferences">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Tools">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
       <CodeArea fx:id="codeArea"
                 AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="10"
                 AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">

       </CodeArea>
   </children>
</AnchorPane>
